<h1 class="heading">Dashboard </h1>

<%= link_to "Edit Orders", "/active/orders", class: "btn btn-outline-dark mr-20" %>
<%= link_to "Edit Menu & Items ", "/menus", class: "btn btn-outline-dark mr-20" %>
<%= link_to "Completed Orders", "/owner/completed", class: "btn btn-outline-dark mr-20" %>

<div class='dashboard-container'>
  <h3>Total Sales: &#8377; <%= Order.get_profit %></h3>
</div>

<div class='dashboard-container'>
  <h3>Total Orders: <%= Order.get_all_orders_count %></h3>
  <%= line_chart User.group_by_day(:created_at).count, colors: ["#181818", "#666"] %>
</div>

<div class='dashboard-container'>
  <h3>Orders By Status:</h3>
  <%= pie_chart Order.where.not(order_status: "cart").all.group(:order_status).count, colors: ["#181818", "#666"] %>
</div>

<div class='dashboard-container'>
  <h3>Users SignIn</h3>
  <%= column_chart User.group_by_day_of_week(:created_at, format: "%a").count, colors: ["#181818", "#666"] %>
</div>


<div class="text-center text-success">

<h1 class="heading">
 Log In User
</h1>

<div class="d-flex justify-content-center">

<%= form_with url: sessions_path, class: "form-container flex-down" do |form| %>

    <p class='label'>Email: </p>
    <%= form.email_field :email, class: "form-field" %>

    <p class='label'>Password:</p>
    <%= form.password_field :password, class: "form-field" %>

    <%= form.submit "Login", class: "form-field btn-outline-dark" %>

<% end %>

</div>

</div>